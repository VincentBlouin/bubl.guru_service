<?xml version="1.0"?>

<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure id="webappContext" class="org.eclipse.jetty.webapp.WebAppContext">

    <Set name="contextPath">/</Set>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>solr_home_path</Arg>
        <Arg>
            /home/vince/Projects/triple_brain/module/search/src/test/resources/solr/
        </Arg>
    </New>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>solr_xml_path_relative_to_home</Arg>
        <Arg>
            conf/solr.xml
        </Arg>
    </New>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>is_testing</Arg>
        <Arg>
            yes
        </Arg>
    </New>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/jenaTripleBrainDB</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.h2.Driver</Set>
                <Set name="url">jdbc:h2:mem:jena_triple_brain;</Set>
                <Set name="username">sa</Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/nonRdfTripleBrainDB</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.h2.Driver</Set>
                <Set name="url">jdbc:h2:mem:triple_brain;</Set>
                <Set name="username">sa</Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>

    <New class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/jenaTripleBrainDBTypeName</Arg>
        <Arg>
            HSQLDB
        </Arg>
    </New>
</Configure>
